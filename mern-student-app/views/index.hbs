<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
</head>

<body>
    <h1>Student Management System</h1>
    <form action="students" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" required>
        <button type="submit">Add Student</button>
    </form>
    <h2>All Students</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>
                    <form action="/students/{{this._id}}?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script>
        document.getElementById('studentForm').addEventListener('submit', async function (event) {
            event.preventDefault(); // Prevent default form submission
            const formData = new FormData(this);
            try {
                const response = await fetch('/students', {
                    method: 'POST',
                    body: formData
                });
                const data = await response.json();
                console.log(data); // Log response data (optional)
                // Optionally, you can update the UI to reflect the newly added student
                // For example, you can append a new row to the table
                // Or you can reload the page to fetch updated data from the server
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>
</body>

</html>